{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "typings/index.d.ts",
        "typings/main",
        "typings/globals"
    ]
}
