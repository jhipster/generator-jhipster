{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "<%= DIST_DIR %>app",
        "rootDir": "./",
        "lib": ["es6", "dom"],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "src/test/javascript"
    ],
    "angularCompilerOptions": {
        "genDir": ".",
        "entryModule": "src/main/webapp/app/app.module.ts#<%=angular2AppName%>AppModule"
    }
}