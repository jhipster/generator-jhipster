{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "<%= DIST_DIR %>app",
    "lib": ["es2015", "es2017", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "<%= MAIN_SRC_DIR %>app/typing.d.ts",
    "<%= MAIN_SRC_DIR %>app/**/*",
    "<%= TEST_SRC_DIR %>**/*"
  ]
}
