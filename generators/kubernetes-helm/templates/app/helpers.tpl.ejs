<%_ if (app.prodDatabaseTypeMariadb) { _%>
{{/*
mariadb customisation
*/}}
{{- define "mariadb.name" -}}
{{- default "<%= app.baseName.toLowerCase() %>-mariadb" -}}
{{- end -}}

{{- define "mariadb.fullname" -}}
{{- default "<%= app.baseName.toLowerCase() %>-mariadb" -}}
{{- end -}}
<%_ } else if (app.prodDatabaseTypeMysql) { _%>
{{/*
mysql customisation
*/}}
{{- define "mysql.name" -}}
{{- default "<%= app.baseName.toLowerCase() %>-mysql" -}}
{{- end -}}

{{- define "mysql.fullname" -}}
{{- default "<%= app.baseName.toLowerCase() %>-mysql" -}}
{{- end -}}
<%_ } else if (app.prodDatabaseTypePostgres) { _%>
{{/*
postgresql customisation
*/}}
{{- define "postgresql.name" -}}
{{- default "<%= app.baseName.toLowerCase() %>-postgresql" -}}
{{- end -}}

{{- define "postgresql.fullname" -}}
{{- default "<%= app.baseName.toLowerCase() %>-postgresql" -}}
{{- end -}}
<%_ } else if (app.prodDatabaseTypeMongodb) { _%>
{{/*
mongodb customisation
*/}}
{{- define "mongodb-replicaset.name" -}}
{{- default "<%= app.baseName.toLowerCase() %>-mongodb" -}}
{{- end -}}

{{- define "mongodb-replicaset.fullname" -}}
{{- default "<%= app.baseName.toLowerCase() %>-mongodb" -}}
{{- end -}}
<%_ } _%>
