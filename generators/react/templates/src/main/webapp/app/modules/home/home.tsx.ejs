                          <FontAwesomeIcon icon="plus" style={{ color: '#012C78' }} />
                          &nbsp; <span style={{ color: '#012C78' }}>Create new Reminder</span>
                        </Link>
                      </div>
                    </div>
              <%_ } else { _%>
              <Alert color="success">
                <Translate contentKey="home.logged.message" interpolate={{ username: account.login }}>You are logged in as user {account.login}.</Translate>
              </Alert>
              <%_ } _%>
            </div>
          ) : (
            <div>
              <%_ if(withExample) { _%>
                <h1 style={{ textAlign: 'center', padding: 50, color: '#012C78' }}>Welcome to <%= capitalizedBaseName %> home page</h1> 
