import './home.scss';

<%_ if (authenticationTypeOauth2) { _%>
import React, { useEffect, useState } from 'react';
<%_ } else { _%>
import React from 'react';
<%_ } _%>
import { Link } from 'react-router-dom';
import { Translate } from 'react-jhipster';
import { Row, Col, Alert } from 'reactstrap';

<%_ if (authenticationTypeOauth2) { _%>
import { getLoginUrl, REDIRECT_URL } from 'app/shared/util/url-utils';
<%_ } _%>
import { useAppSelector } from 'app/config/store';
<%_ if(withExample) { _%>
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { useNavigate } from 'react-router-dom';
<%_ } _%>

export const Home = () => {
  const account = useAppSelector(state => state.authentication.account);
  <%_ if(withExample) { _%>
    const navigate = useNavigate();
  <%_ } _%>
<%_ if (authenticationTypeOauth2) { _%>
  useEffect(() => {
    const redirectURL = localStorage.getItem(REDIRECT_URL);
    if (redirectURL) {
      localStorage.removeItem(REDIRECT_URL);
      location.href = `${location.origin}${redirectURL}`;
    }
  });
<%_ } _%>
<%_ if(withExample) { _%>
  if(account.login){
    navigate('/reminder');
  }
<%_ } _%>

  return (
    <Row>
        {
          (account?.login) ? (
            <div>
                  <h1 style={{ textAlign: 'center', padding: 50, color: '#012C78' }}>Welcome to <%= capitalizedBaseName %> home page</h1>
                  <Alert style={{ backgroundColor: '#EDEDED', borderColor: '#EDEDED' }}>
                    <span style={{ color: '#012C78' }}>
                    <Translate contentKey="home.logged.message" interpolate={{ username: account.login }}>
                      You are logged in as user {account.login}.
                    </Translate>
                  </span>
                  </Alert>
                    <br></br>
                    <%_ if(withExample) { _%>
                    <div style={{ display: 'flex', flexDirection: 'row', justifyContent: 'space-between' }}>
                      Here is an example of reminder application, you can click the icon to add your own reminder
                      <div>
                        <Link to="/reminder/new" className="btn btn-primary jh-create-entity" id="jh-create-entity" data-cy="entityCreateButton"style={{ backgroundColor: '#CADCFC', borderColor: '#CADCFC' }}
                        >
                          <FontAwesomeIcon icon="plus" style={{ color: '#012C78' }} />
                          &nbsp; <span style={{ color: '#012C78' }}>Create new Reminder</span>
                        </Link>
                      </div>
                    </div>
              <%_ } _%>
            </div>
          ) : (
            <div>
                <h1 style={{ textAlign: 'center', padding: 50, color: '#012C78' }}>Welcome to <%= capitalizedBaseName %> home page</h1> 
                <div
                style={{
                  display: 'flex',
                  flexDirection: 'row',
                  justifyContent: 'space-between',
                  marginLeft: '8%',
                  marginRight: '8%',
                  marginTop: 0,
                  marginBottom: 50,
                  color: '#012C78',
                }}
              >
                <div>
                  <img src="content/images/TIC.png" style={{  width: '100%', height: '100%', marginRight:'3%' }}></img>
                </div>
                <div style={{marginTop:100, marginLeft:'3%', marginRight:'3%'}}>
                  <h5>
                    Click here to <span></span>
                    <a href={getLoginUrl()} style={{ color: '#012C78' }}>
                      sign in
                    </a>
                  </h5>
                  <br />
                  <h5>This is an application using our WDA</h5>
                  <h5>
                    Our products can be found here... &nbsp;
                    <a href="http://wda-ui.s3-website.ap-south-1.amazonaws.com/" target="_blank" style={{ color: '#012C78' }}>
                      TIC_HomePage
                    </a>
                  </h5>
                  <br />
                  <h5>
                    For more detailed information regarding our project you can refer our &nbsp;
                    <a href=" https://comakeit-tic.github.io/" target="_blank" style={{ color: '#012C78' }}>
                      Documentation
                    </a>
                  </h5>
                </div>
              </div>
              </div>
          )}
    </Row>
  );
};

export default Home;
