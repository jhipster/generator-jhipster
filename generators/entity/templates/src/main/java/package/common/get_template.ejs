<%_ var mapper = entityInstance  + 'Mapper';
    var entityToDto = mapper + '.'+ entityInstance +'To' + entityClass + 'DTO';
    var findMethod = ((databaseType == 'sql' || databaseType == 'mongodb') && fieldsContainOwnerManyToMany == true) ? 'findOneWithEagerRelationships' : 'findOne';
    var idProperty = (databaseType == 'cassandra') ? 'UUID.fromString(id)' : 'id'; %>
<%_ if (!viaService) { _%>
        <%= entityClass %> <%= entityInstance %> = <%= entityInstance %>Repository.<%= findMethod %>(<%= idProperty %>);
<%_ } else { _%>
        <%= entityClass %> <%= entityInstance %> = <%= entityInstance %>Service.findOne(id);
<%_ } _%>
<%_ if (useDto) { _%>
        <%= entityClass %>DTO <%= entityInstance %>DTO = <%= entityToDto %>(<%= entityInstance %>);
<%_ } _%>