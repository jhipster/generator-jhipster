name: Build and deploy on Azure App Service

on:
  push:
    branches:    
      - master

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v1
    - name: Set up JDK 11
      uses: actions/setup-java@v1
      with:
        java-version: 11
    - name: Test with Maven
      run: mvn test
    - name: Build with Maven
      run: mvn package -DskipTests -Pprod,azure
    - name: Login to Azure
      uses: azure/login@v1
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}
    - name: Deploy with Maven
      run: mvn azure-webapp:deploy -DskipTests -Pprod,azure
