apiVersion: <%= KUBERNETES_DEPLOYMENT_API_VERSION %>
kind: Deployment
metadata:
  name: jhipster-kafka
  namespace: <%= kubernetesNamespace %>
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jhipster-kafka
  template:
    metadata:
      labels:
        app: jhipster-kafka
     <%_ if (istio) { _%>
      annotations:
        sidecar.istio.io/inject: "false"
     <%_ } _%>
    spec:
      containers:
      - name: kafka
        image: <%= DOCKER_KAFKA %>
        env:
        - name: KAFKA_ADVERTISED_LISTENERS
          value: 'PLAINTEXT://jhipster-kafka.<%= kubernetesNamespace %>.svc.cluster.local:9092'
        - name: KAFKA_ZOOKEEPER_CONNECT
          value: 'jhipster-zookeeper.<%= kubernetesNamespace %>.svc.cluster.local:2181'
        - name: KAFKA_BROKER_ID
          value: '2'
        - name: KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR
          value: '1'
        ports:
        - containerPort: 9092
---
apiVersion: <%= KUBERNETES_CORE_API_VERSION  %>
kind: Service
metadata:
  name: jhipster-kafka
  namespace: <%= kubernetesNamespace %>
spec:
  selector:
    app: jhipster-kafka
  ports:
  - port: 9092
---
apiVersion: <%= KUBERNETES_DEPLOYMENT_API_VERSION %>
kind: Deployment
metadata:
  name: jhipster-zookeeper
  namespace: <%= kubernetesNamespace %>
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jhipster-zookeeper
  template:
    metadata:
      labels:
        app: jhipster-zookeeper
     <%_ if (istio) { _%>
      annotations:
        sidecar.istio.io/inject: "false"
     <%_ } _%>
    spec:
      containers:
      - name: zookeeper
        image: <%= DOCKER_ZOOKEEPER %>
        env:
        - name: ZOOKEEPER_CLIENT_PORT
          value: '2181'
        - name: ZOOKEEPER_TICK_TIME
          value: '2000'
        - name: ZOOKEEPER_SYNC_LIMIT
          value: '2'
        ports:
        - containerPort: 2181
---
apiVersion: <%= KUBERNETES_CORE_API_VERSION  %>
kind: Service
metadata:
  name: jhipster-zookeeper
  namespace: <%= kubernetesNamespace %>
spec:
  selector:
    app: jhipster-zookeeper
  ports:
  - port: 2181
