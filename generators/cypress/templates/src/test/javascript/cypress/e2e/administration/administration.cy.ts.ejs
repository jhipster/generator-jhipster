describe('/admin', () => {
  const username = Cypress.env('E2E_USERNAME') ?? 'admin';
  const password = Cypress.env('E2E_PASSWORD') ?? 'admin';

  const mockAdminUser = {
    id: 1,
    login: 'admin',
    firstName: 'Admin',
    lastName: 'Administrator',
    email: 'admin@localhost',
    activated: true,
    langKey: 'en',
    authorities: ['ROLE_USER', 'ROLE_ADMIN'],
    createdBy: 'system',
    createdDate: '2020-01-01T00:00:00Z',
    lastModifiedBy: 'system',
    lastModifiedDate: '2020-01-01T00:00:00Z',
  };

  const mockAuthorities = [{ name: 'ROLE_ADMIN' }, { name: 'ROLE_USER' }];

  beforeEach(() => {
    cy.intercept('GET', '/api/account', {
      statusCode: 200,
      body: mockAdminUser,
    }).as('account');

    cy.intercept('GET', '/api/authorities', {
      statusCode: 200,
      body: mockAuthorities,
    }).as('authorities');

    cy.intercept('GET', '/management/info', {
      statusCode: 200,
      body: {
        activeProfiles: ['dev', 'api-docs'],
        'display-ribbon-on-profiles': 'dev',
      },
    }).as('managementInfo');

    cy.intercept('GET', '/management/health', {
      statusCode: 200,
      body: {
        status: 'UP',
        components: {
          db: { status: 'UP' },
          diskSpace: { status: 'UP' },
          ping: { status: 'UP' },
        },
      },
    }).as('health');

    cy.intercept('GET', '/management/configprops', {
      statusCode: 200,
      body: {
        contexts: {
          application: {
            beans: {},
          },
        },
      },
    }).as('configprops');

    cy.intercept('GET', '/management/env', {
      statusCode: 200,
      body: { activeProfiles: ['dev'], propertySources: [] },
    }).as('env');

    cy.intercept('GET', '/management/loggers', {
      statusCode: 200,
      body: {
        levels: ['OFF', 'ERROR', 'WARN', 'INFO', 'DEBUG', 'TRACE'],
        loggers: {
          ROOT: { configuredLevel: 'INFO', effectiveLevel: 'INFO' },
          'com.mycompany': { configuredLevel: 'DEBUG', effectiveLevel: 'DEBUG' },
        },
      },
    }).as('loggers');

    cy.intercept('GET', '/management/jhimetrics', {
      statusCode: 200,
      body: {
        jvm: {},
        cache: {},
        services: {},
        databases: {},
        garbageCollector: {},
        processMetrics: {},
      },
    }).as('metrics');

    cy.intercept('GET', '/management/threaddump', {
      statusCode: 200,
      body: { threads: [] },
    }).as('threaddump');

    cy.login(username, password);
    cy.visit('');
  });

<%_ if (generateUserManagement) { _%>
  describe('/user-management', () => {
    it('should load the page', () => {
      cy.clickOnAdminMenuItem('user-management');
      cy.get(userManagementPageHeadingSelector).should('be.visible');
    });
    describe('/user-management CRUD', () => {
      const userManagementPageUrlPattern = new RegExp('/admin/user-management(\\?.*)?$');
      const userManagementPageUrl = '/admin/user-management';
      let user: { id: number; login: string; email: string; firstName?: string; lastName?: string; activated?: boolean; langKey?: string; authorities?: string[] } | undefined;

      afterEach(() => {
        user = undefined;
      });

      describe('with existing value', () => {
        beforeEach(() => {
          user = {
            id: 100,
            login: `user${Math.floor(Math.random() * 1000000)}`,
            email: `user${Math.floor(Math.random() * 1000000)}@example.com`,
            firstName: 'Test',
            lastName: 'User',
            activated: true,
            langKey: 'en',
            authorities: ['ROLE_USER'],
          };

          cy.intercept('GET', '/api/admin/users*', req => {
            const body = user ? [user] : [];
            const total = user ? '1' : '0';
            req.reply({
              statusCode: 200,
              body,
              headers: { 'x-total-count': total },
            });
          }).as('entitiesRequest');

          cy.intercept('GET', /\/api\/admin\/users\/[^/]+$/, req => {
            req.reply({
              statusCode: 200,
              body: user,
            });
          }).as('getUser');

          cy.intercept('PUT', '/api/admin/users', req => {
            req.reply({
              statusCode: 200,
              body: user,
            });
          }).as('updateUser');

          cy.intercept('DELETE', /\/api\/admin\/users\/[^/]+$/, req => {
            req.reply({
              statusCode: 204,
              body: null,
            });
          }).as('deleteEntityRequest');

          cy.visit(userManagementPageUrl);
          cy.wait('@entitiesRequest');
        });

        it('detail button click should load details User page', () => {
          cy.get(entityDetailsButtonSelector).last().click();
          cy.getEntityDetailsHeading('userManagement');
          cy.get(entityDetailsBackButtonSelector).click();
          cy.wait('@entitiesRequest').then(({ response }) => {
            expect(response?.statusCode).to.equal(200);
          });
          cy.url().should('match', userManagementPageUrlPattern);
        });

        it('edit button click should load edit User page and go back', () => {
          cy.get(entityEditButtonSelector).last().click();
          cy.getEntityCreateUpdateHeading('userManagement');
          cy.get(entityCreateSaveButtonSelector).should('exist');
          cy.get(entityCreateCancelButtonSelector).click();
          cy.wait('@entitiesRequest').then(({ response }) => {
            expect(response?.statusCode).to.equal(200);
          });
          cy.url().should('match', userManagementPageUrlPattern);
        });

        it('edit button click should load edit User page and save', () => {
          cy.get(entityEditButtonSelector).last().click();
          cy.getEntityCreateUpdateHeading('userManagement');
          cy.get(entityCreateSaveButtonSelector).click();
          cy.wait('@entitiesRequest').then(({ response }) => {
            expect(response?.statusCode).to.equal(200);
          });
          cy.url().should('match', userManagementPageUrlPattern);
        });

        it('last delete button click should delete instance of User', () => {
          cy.get(entityDeleteButtonSelector).last().click();
          cy.getEntityDeleteDialogHeading('userManagement').should('exist');
          cy.get(entityConfirmDeleteButtonSelector).click();
          cy.wait('@deleteEntityRequest').then(({ response }) => {
            expect(response?.statusCode).to.equal(204);
          });
          cy.wait('@entitiesRequest').then(({ response }) => {
            expect(response?.statusCode).to.equal(200);
          });
          cy.url().should('match', userManagementPageUrlPattern);

          user = undefined;
        });
      });
    });
  });
<%_ } _%>

