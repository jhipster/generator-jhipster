<%_ if (gitlabUseDocker) { _%>
image: openjdk:8
<%_ } _%>

<%_ if (buildTool === 'gradle') { _%>
cache:
    key: "$CI_COMMIT_REF_NAME"
    paths:
        - node_modules
        - .gradle/wrapper
        - .gradle/caches
<%_ } _%>
<%_ if (buildTool === 'maven') { _%>
cache:
    key: "$CI_COMMIT_REF_NAME"
    paths:
        - node_modules
        - .maven
<%_ } _%>
stages:
    - build
    - test
    - package
<%_ if (heroku.includes('gitlab')) { _%>
    - deploy
<%_ } _%>

<%_ if (buildTool === 'gradle') { _%>
before_script:
    - export GRADLE_USER_HOME=`pwd`/.gradle
    - chmod +x gradlew
    <%_ if (!skipClient) { _%>
        <%_ if (clientPackageManager === 'yarn') { _%>
    - ./gradlew yarn_install -PnodeInstall --no-daemon
        <%_ } else if (clientPackageManager === 'npm') { _%>
    - ./gradlew npmInstall -PnodeInstall --no-daemon
        <%_ } _%>
    <%_ } _%>

gradle-build:
    stage: build
    script:
        - ./gradlew compileJava -x check -PnodeInstall --no-daemon
gradle-test:
    stage: test
    script:
        - ./gradlew test -PnodeInstall --no-daemon
    artifacts:
        paths:
            - build/reports/tests/*
# Uncomment following to expire the artifacts after defined period, https://docs.gitlab.com/ee/ci/yaml/README.html#artifacts-expire_in
#       expire_in: 90 day
    <%_ if (!skipClient) { _%>
gradle-front-test:
    stage: test
    script:
        <%_ if (clientPackageManager === 'yarn') { _%>
        - ./gradlew yarn_test -PnodeInstall --no-daemon
        <%_ } else if (clientPackageManager === 'npm') { _%>
        - ./gradlew npm_test -PnodeInstall --no-daemon
        <%_ } _%>
    artifacts:
        paths:
            - build/test-results/jest/*
#       expire_in: 90 day
    <%_ } _%>
gradle-repackage:
    stage: package
    script:
        - ./gradlew bootWar -Pprod -x check -PnodeInstall --no-daemon
    artifacts:
        paths:
            - build/libs/*.war
#       expire_in: 90 day
    <%_ if (heroku.includes('gitlab')) { _%>
gradle-deploy:
    stage: deploy
    script:
        - ./gradlew deployHeroku --no-daemon
    <%_ } _%>
<%_ } _%>
<%_ if (buildTool === 'maven') { _%>
before_script:
    - export MAVEN_USER_HOME=`pwd`/.maven
    - chmod +x mvnw
    <%_ if (!skipClient) { _%>
        <%_ if (clientPackageManager === 'yarn') { _%>
    - ./mvnw com.github.eirslett:frontend-maven-plugin:install-node-and-yarn -DnodeVersion=v<%= NODE_VERSION %> -DyarnVersion=v<%= YARN_VERSION %> -Dmaven.repo.local=$MAVEN_USER_HOME
    - ./mvnw com.github.eirslett:frontend-maven-plugin:yarn -Dmaven.repo.local=$MAVEN_USER_HOME
        <%_ } else if (clientPackageManager === 'npm') { _%>
    - ./mvnw com.github.eirslett:frontend-maven-plugin:install-node-and-npm -DnodeVersion=v<%= NODE_VERSION %> -DnpmVersion=<%= NPM_VERSION %> -Dmaven.repo.local=$MAVEN_USER_HOME
    - ./mvnw com.github.eirslett:frontend-maven-plugin:npm -Dmaven.repo.local=$MAVEN_USER_HOME
        <%_ } _%>
    <%_ } _%>

maven-build:
    stage: build
    script: ./mvnw compile -Dmaven.repo.local=$MAVEN_USER_HOME

maven-test:
    stage: test
    script:
        - ./mvnw test -Dmaven.repo.local=$MAVEN_USER_HOME
    artifacts:
        paths:
            - target/surefire-reports/*
# Uncomment following to expire the artifacts after defined period, https://docs.gitlab.com/ee/ci/yaml/README.html#artifacts-expire_in
#       expire_in: 90 day
    <%_ if (!skipClient) { _%>
maven-front-test:
    stage: test
    script:
        <%_ if (clientPackageManager === 'yarn') { _%>
        - ./mvnw com.github.eirslett:frontend-maven-plugin:yarn -Dfrontend.yarn.arguments=test -Dmaven.repo.local=$MAVEN_USER_HOME
        <%_ } else if (clientPackageManager === 'npm') { _%>
        - ./mvnw com.github.eirslett:frontend-maven-plugin:npm -Dfrontend.yarn.arguments=test -Dmaven.repo.local=$MAVEN_USER_HOME
        <%_ } _%>
    artifacts:
        paths:
            - target/test-results/jest/*
#       expire_in: 90 day
    <%_ } _%>
    <%_ if (heroku.includes('gitlab')) { _%>
maven-deploy:
    stage: deploy
    script:
        - ./mvnw com.heroku.sdk:heroku-maven-plugin:1.1.1:deploy -DskipTests -Pprod -Dheroku.appName=<%= herokuAppName %> -Dmaven.repo.local=$MAVEN_USER_HOME
    <%_ } else { _%>
maven-package:
    stage: package
    script:
        - ./mvnw verify -Pprod -DskipTests -Dmaven.repo.local=$MAVEN_USER_HOME
    <%_ } _%>
    artifacts:
        paths:
            - target/*.war
#       expire_in: 90 day
<%_ } _%>
