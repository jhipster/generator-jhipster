package <%= packageName %>.web.rest;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class ClientForwardController {
    // File names with extension.
    public static final String EXTENSION_PATTERN = "/{file:[^\\.]*}";

    // Folders with trailing separator.
    public static final String TRAILING_PATTERN = "/{trailingDir:.*}/";
<%_ if (communicationSpringWebsocket) { _%>

    // Root folders allow list. Folders that should not be forwarded to index.html.
    public static final String ALLOW_LIST_PATTERN = "/{rootDir:^(?!websocket).*}";
<%_ } _%>

    /**
     * Forwards any unmapped paths (except file names containing a period) to the client {@code index.html}.
     * @return forward to client {@code index.html}.
     */
<%_ if (communicationSpringWebsocket) { _%>
    @GetMapping(value = {
        EXTENSION_PATTERN,
        ALLOW_LIST_PATTERN + EXTENSION_PATTERN,
        ALLOW_LIST_PATTERN + "/*" + EXTENSION_PATTERN,
        TRAILING_PATTERN,
        "/*" + TRAILING_PATTERN,
        "/*/*" + TRAILING_PATTERN,
        ALLOW_LIST_PATTERN + "/*/*/*/{*remaining}",
})
<%_ } else { _%>
    @GetMapping(value = {
        EXTENSION_PATTERN,
        "/*" + EXTENSION_PATTERN,
        "/*/*" + EXTENSION_PATTERN,
        TRAILING_PATTERN,
        "/*" + TRAILING_PATTERN,
        "/*/*" + TRAILING_PATTERN,
        "/*/*/*/*/{*remaining}",
    })
<%_ } _%>
    public String forward() {
        return "forward:/";
    }
}
