        UserJWTController userJWTController = new UserJWTController(tokenProvider, authenticationManager);
        <%_ if (!reactive) { _%>
        this.mockMvc = MockMvcBuilders.standaloneSetup(userJWTController)
            .setControllerAdvice(exceptionTranslator)
        <%_ } else { _%>
