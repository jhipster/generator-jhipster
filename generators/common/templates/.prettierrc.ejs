# Prettier configuration

printWidth: 140
singleQuote: true
tabWidth: <%= prettierTabWidth %>
useTabs: false

# js and ts rules:
arrowParens: avoid

# jsx and tsx rules:
bracketSameLine: false

plugins:
  - prettier-plugin-packagejson
<%_ if (!skipServer) { _%>
  - prettier-plugin-java
  
# java rules:
overrides:
  - files: "*.java"
    options:
      tabWidth: 4
<%_ } _%>
