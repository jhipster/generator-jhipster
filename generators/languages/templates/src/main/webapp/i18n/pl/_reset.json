{
    "reset": {
        "request": {
            "title": "Zresetuj swoje hasło",
            "form": {
                "button": "Reset hasła"
            },
            "messages": {
                "info": "Wpisz email użyty podczas rejestracji.",
                "success": "Sprawdź email w celu uzyskania szczegołów jak zresetować hasło.",
                "notfound": "<strong>Email nie był zarejestrowany!</strong> Proszę sprawdź i spróbuj ponownie."
            }
        },
        "finish" : {
            "title": "Reset hasła",
            "form": {
                "button": "Sprawdź nowe hasło"
