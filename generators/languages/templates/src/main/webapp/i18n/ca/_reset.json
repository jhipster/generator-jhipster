{
    "reset": {
        "request": {
            "title": "Reinicialitzar la seva contrasenya",
            "form": {
                "button": "Reinicialitza la contrasenya"
            },
            "messages": {
                "info": "Introdueixi l'adreca de correu que va fer servir per registrar-se",
                "success": "Comprovi el seu correu, li hem enviat instruccions per reinicialitzar la seva contrasenya.",
                "notfound": "<strong>L'adreca de correu no existeix!</strong> Si us plau, corregeixi i torni-ho a intentar"
            }
        },
        "finish" : {
            "title": "Reinicialitzar la seva contrasenya",
            "form": {
                "button": "Validi la seva contrasenya"
            },
            "messages": {
                "info": "Trii la seva nova contrasenya",
