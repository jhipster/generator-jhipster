{
    "reset": {
        "request": {
            "title": "重設您的密碼",
            "form": {
                "button": "重設密碼"
            },
            "messages": {
                "info": "輸入註冊時使用的電子郵件地址",
                "success": "檢查您的電子郵件信箱，了解如何重設密碼。",
                "notfound": "<strong>電子郵件地址未註冊!</strong> 請檢查並重試"
            }
        },
        "finish" : {
            "title": "重設密碼",
            "form": {
                "button": "確定"
            },
            "messages": {
                "info": "請設定新的密碼",
