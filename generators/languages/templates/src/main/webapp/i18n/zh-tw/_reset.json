                <%_ } else { _%>
                "success": "<strong>您的密碼已重設。</strong> 請 ",
                <%_ } _%>
                "keymissing": "沒有輸入重設金鑰",
                "error": "無法重設密碼。 請注意，密碼重設要求的效期只有 24 小時。"
            }
        }
    }
