# ===================================================================
# Spring Boot configuration for the "secret-samples" profile.
#
# This configuration overrides the application.yml file.
#
# More information on profiles: https://www.jhipster.tech/profiles/
# More information on configuration properties: https://www.jhipster.tech/common-application-properties/
# ===================================================================

# ===================================================================
# Samples for required secrets to be used in development and ci using prod profile.
# ===================================================================

spring:
<%_ if (databaseTypeCouchbase) { _%>
  couchbase:
    username: Administrator
    password: password
<%_ } _%>
<%_ if (databaseTypeSql && !devDatabaseTypeH2Any) { _%>
  <%- reactive ? 'r2dbc' : 'datasource' %>:
    username: <%- prodDatabaseUsername %>
    password: <%- prodDatabasePassword %>
<%_ } _%>

jhipster:
<%_ if (serviceDiscoveryEureka) { _%>
  registry:
    password: admin
<%_ } _%>
  security:
<%_ if (authenticationTypeJwt) { _%>
    authentication:
      jwt:
        base64-secret: <%= jwtSecretKey %>
<%_ } _%>
<%_ if (authenticationTypeSession && !reactive) { _%>
    remember-me:
      key: <%= rememberMeKey %>
<%_ } _%>
<%_ if (generateInMemoryUserCredentials) { _%>
    user:
      name: admin
      password: admin
      roles:
        - ADMIN
        - USER
<%_ } _%>
<%_ if (devDatabaseTypeH2Any) { _%>
---
spring:
  config:
    activate:
      on-profile: dev
  <%- reactive ? 'r2dbc' : 'datasource' %>:
    username: <%- devDatabaseUsername %>
    password: <%- devDatabasePassword %>
---
spring:
  config:
    activate:
      on-profile: prod
  <%- reactive ? 'r2dbc' : 'datasource' %>:
    username: <%- prodDatabaseUsername %>
    password: <%- prodDatabasePassword %>
<%_ } _%>
