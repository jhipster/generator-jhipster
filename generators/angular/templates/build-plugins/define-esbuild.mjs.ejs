/** @type {import('esbuild').Plugin} */
export default {
  name: 'define:vars',
  setup(build) {
    build.initialOptions.define ??= {};
    Object.assign(build.initialOptions.define, {
      SERVER_API_URL: JSON.stringify(''),
      __VERSION__: JSON.stringify(process.env.APP_VERSION ?? 'unknown'),
    });
  },
};
