{
  "include": [
    "./cli",
    "./jdl",
    "./testing",
    "./lib/eslint/recommended.ts",
    "./generators/index.ts",
    "./generators/base",
    "./generators/base-application",
    "./generators/base-core",
    "./generators/**/support/**/*",
    "./generators/**/internal/**/*",
    "./generators/**/jdl/**/*",
    "./generators/*/type-export.d.ts"
  ],
  "exclude": ["**/*.spec.*", "**/__*/**"],
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declarationDir": "./dist/types",
    "declaration": true,
    "skipLibCheck": false /* Skip type checking all .d.ts files. */,
    "emitDeclarationOnly": true
  }
}
