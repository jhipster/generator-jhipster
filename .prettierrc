# Prettier configuration

printWidth: 140
singleQuote: true
tabWidth: 2
useTabs: false

# js and ts rules:
arrowParens: avoid

# jsx and tsx rules:
bracketSameLine: false

plugins:
  - prettier-plugin-packagejson
  - prettier-plugin-java

overrides:
  # java rules:
  - files: "*.java"
    options:
      tabWidth: 4
  # xml rules:
  - files: "*.xml"
    options:
      tabWidth: 4
