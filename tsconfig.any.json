{
  "include": [".blueprint", "cli/**/*", "generators", "generators/base-core", "lib/**/*", "test/**/*", ".blueprint/**/*"],
  "exclude": [
    ".blueprint/**/*.spec.ts",
    "cli/cli.spec.mts",
    "cli/environment-builder.spec.mts",
    "cli/program.mts",
    "generators/**/*.spec.ts",
    "generators/**/__test-support/*",
    "generators/base-workspaces/internal",
    "generators/docker-compose/generator.ts",
    "generators/docker-compose/index.ts",
    "generators/entity/generator.ts",
    "generators/entity/index.ts",
    "generators/entity/prompts.ts",
    "generators/heroku/generator.ts",
    "generators/heroku/index.ts",
    "generators/kubernetes*/prompts.ts",
    "generators/kubernetes*/generator.ts",
    "generators/kubernetes*/index.ts",
    "generators/kubernetes/kubernetes-base.ts",
    "generators/kubernetes/generators/*/generator.ts",
    "generators/kubernetes/generators/*/index.ts",
    "generators/upgrade/generator.ts",
    "generators/upgrade/index.ts",
    "generators/workspaces/generator.ts",
    "generators/workspaces/index.ts",
    "lib/command/*.spec.ts",
    "lib/jdl/*.*",
    "lib/jdl/core/__test-support__",
    "lib/jdl/core/built-in-options/**/*.spec.ts",
    "lib/jdl/core/linters/**/*.spec.ts",
    "lib/jdl/core/models/**/*.spec.ts",
    "lib/jdl/core/parsing/**/*.spec.ts",
    "lib/jdl/core/readers/**/*.spec.ts",
    "lib/jdl/core/utils/**/*.spec.ts",
    "lib/jdl/converters/*.spec.ts",
    "lib/jdl/converters/exporters/*.spec.ts",
    "lib/jdl/converters/jdl-to-json/*.spec.ts",
    "lib/jdl/converters/parsed-jdl-to-jdl-object/*.spec.ts",
    "lib/jdl/converters/validators/*.spec.ts",
    "lib/jdl-config/",
    "lib/jhipster/*.spec.ts",
    "lib/testing",
    "cli",
    "test"
  ],
  "extends": "./tsconfig.spec.json",
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "types": ["node"]
  }
}
