            <version><%= _.unescape('\${metrics-spring.version}')%></version>
        </dependency>
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
            <version><%= _.unescape('\${HikariCP.version}')%></version>
