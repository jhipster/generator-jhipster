  "version": "0.4.4",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "yarn lint:fix",
      "git add"
    ]
  },
  "scripts": {
    "tsc": "tsc",
    "precommit": "lint-staged",
    "prettier:format": "prettier --write '**/*.{ts,tsx}'",
    "cleanup": "rimraf lib/* src/*.d.ts src/**/*.d.ts src/*.{js,jsx} src/**/*.{js,jsx} tests/**/*.d.ts tests/*.d.ts",
    "lint": "tslint --project tslint.json",
    "lint:fix": "tslint --project tslint.json --fix",
    "test": "npm run lint && karma start tests/karma.conf.js --test",
    "test:watch": "karma start tests/karma.conf.js --watch --test",
    "build": "npm run cleanup && npm run tsc && webpack && shx cp bundles/react-jhipster.umd.js bundles/index.js",
    "release": "npm run build && npm test && git push && git push --tags && npm publish",
    "release:patch": "npm version patch -a -m \"Update to %s\" && npm run release",
    "release:minor": "npm version minor -a -m \"Update to %s\" && npm run release",
    "release:major": "npm version major -a -m \"Update to %s\" && npm run release"
  }
